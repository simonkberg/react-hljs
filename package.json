{
  "name": "react-hljs",
  "version": "0.0.3",
  "description": "Highlight.js for React",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "clean": "rimraf lib",
    "lint": "eslint src",
    "build": "npm run clean && babel src/Highlight.js -o lib/react-hljs.js && npm run minify",
    "minify": "uglifyjs lib/react-hljs.js -o react-hljs.min.js",
    "prepublish": "npm run lint && npm run build"
  },
  "jest": {
    "rootDir": "src",
    "unmockedModulePathPatterns": [
      "node_modules/react",
      "node_modules/react-dom",
      "node_modules/react-addons-test-utils",
      "node_modules/highlight.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simonkberg/react-hljs.git"
  },
  "keywords": [
    "react",
    "component",
    "highlight.js",
    "syntax",
    "highlight",
    "hljs"
  ],
  "author": "Simon Kjellberg <simon.kjellberg@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simonkberg/react-hljs/issues"
  },
  "homepage": "https://github.com/simonkberg/react-hljs#readme",
  "devDependencies": {
    "archiver": "^0.21.0",
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.0",
    "babel-jest": "^9.0.3",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-es2015-modules-umd": "^6.6.5",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "del": "^2.2.0",
    "eslint": "^2.5.3",
    "eslint-config-standard": "^5.1.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-react": "^4.2.3",
    "eslint-plugin-standard": "^1.3.2",
    "jest-cli": "^0.9.2",
    "react": "^0.14.8",
    "react-addons-test-utils": "^0.14.8",
    "react-dom": "^0.14.8"
  },
  "peerDependencies": {
    "react": "^0.14.0"
  },
  "dependencies": {
    "highlight.js": "^9.2.0"
  },
  "files": [
    "lib/react-hljs.js"
  ]
}
